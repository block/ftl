go_library(
    name = "console",
    embed = [":consolepb_go_proto"],
    importpath = "github.com/block/ftl/backend/protos/xyz/block/ftl/console/v1",
    visibility = ["//visibility:public"],
)

buf_lint_test(
    name = "consolepb_proto_lint",
    config = "//backend/protos:buf.yaml",
    targets = [":consolepb_proto"],
)
